{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "outDir": "./dist",
    "paths": {
      "src/*": ["src/*"]
    }
  },
  "exclude": [
    "jest.config.ts",
    "**/*.test.ts",
    "./dist/**/*"
  ]
}
